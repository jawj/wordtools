{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  }
}
